# Configuración de Producción - Hostinger
NODE_ENV=production

# Base de Datos MySQL
DB_HOST=localhost
DB_USER=tu_usuario_mysql
DB_PASSWORD=tu_password_mysql
DB_NAME=tu_base_datos
DB_PORT=3306

# Configuración del Servidor
PORT=3000
HOST=0.0.0.0

# JWT
JWT_SECRET=tu_jwt_secret_muy_seguro_y_largo_para_produccion
JWT_EXPIRES_IN=24h

# CORS
CORS_ORIGIN=https://tu-dominio.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Uploads
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=tu_session_secret_muy_seguro

# Email (opcional)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_USER=tu_email@tu-dominio.com
SMTP_PASS=tu_password_email 